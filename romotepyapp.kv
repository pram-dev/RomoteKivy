#:kivy 1.0.9

#####-----
<RootScreenManager>:

	contact_est: self.remote.CONTACT_ESTABLISHED
	current: main_remote_scr.name if self.contact_est else init_setup_scr.name

	InitialSetupScreen:
		id: init_setup_scr
		name: "init_setup_scr"
	MainRemoteScreen:
		id: main_remote_scr
		name: "main_remote_scr"
	SettingsAboutScreen:
		id: settings_about_scr
		name: "settings_about_scr"



#####-----
<MDScreen>:

	#:set CANVAS_RGBA_COLOR (0.125, 0.125, 0.125, 0.85)

	canvas:
		Color:
			rgba: CANVAS_RGBA_COLOR
		Rectangle:
			pos: root.pos
			size: root.size



#####-----
<MainScreenGridLayout@MDGridLayout>:
	cols: 1



######-----
<ControllerTopSection@MDRelativeLayout>:

	#:set POWER_BUTTON_TEXT "POWER"
	#:set POWER_BUTTON_ICON "power"

	size_hint: (1, 0.5)

	MDRectangleFlatIconButton:
		id: power_button
		icon: POWER_BUTTON_ICON
		size_hint: 0.25, 1
		pos_hint: {"x" : 0, "top": 1}
		text: POWER_BUTTON_TEXT
		on_press: app.root.remote.power()
	Label:
		size_hint: 0.35, 1
		pos: (power_button.right, 0)
		text: "POWER_STATE"
	Button:
		size_hint: 0.4, 1
		pos_hint: {"right": 1, "top": 1}
		text: "logo text or image"



#####-----
<ControllerQuickLinksSection@MDBoxLayout>:
	Button:
		text: "customizable quick links/buttons to favorite apps will go here"



#####-----
<ControllerDPadSection@MDRelativeLayout>:
	Button:
		text: "SVG dpad will go here"



#####-----
<ControllerFunctionButtonsSection@MDGridLayout>:
	cols: 1
	Button:
		text: "playback controls and function buttons will go here"



#####-----
<SettingsAboutScreen@MDScreen>: #not implemented yet



#####-----
<MainRemoteScreen@MDScreen>: #MD screen
	MainScreenGridLayout:

		ControllerTopSection:
		ControllerQuickLinksSection:
		ControllerDPadSection:
		ControllerFunctionButtonsSection:



#####-----
<InitialSetupScreen@MDScreen>:
	Label:
		text: "initial setup screen"
