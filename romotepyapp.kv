#:kivy 2.1.0

#####-----
<RootScreenManager>:
	id: root_scr_mgr

	init_setup_scr: init_setup_scr
	main_remote_scr: main_remote_scr
	settings_about_scr: settings_about_scr

	InitialSetupScreen:
		id: init_setup_scr
		name: "init_setup_scr"
	MainRemoteScreen:
		id: main_remote_scr
		name: "main_remote_scr"
	SettingsAboutScreen:
		id: settings_about_scr
		name: "settings_about_scr"



#####-----
<MDScreen>:

	#:set CANVAS_RGBA_COLOR (0.125, 0.125, 0.125, 0.85)

	canvas:
		Color:
			rgba: CANVAS_RGBA_COLOR
		Rectangle:
			pos: root.pos
			size: root.size



#####-----
<MainScreenGridLayout@MDGridLayout>:
	cols: 1



#####-----
<MDLabel>:
	text_size: self.size
	valign: "center"
	halign: "center"



#####-----
<PowerState>:
	size_hint: 0.35, 1
	text: "POWER_STATE"
	color: (1, 1, 1, 1)



#####-----
<ScreenMenuSpinner@Button>:
	size_hint: 0.4, 1
	text: "SCREEN_MENU_SPINNER"




#####-----
<PowerButton>:
	icon: POWER_BUTTON_ICON
	size_hint: 0.25, 0.5
	text: POWER_BUTTON_TEXT
	on_press: self.power_button_press()



#####-----
<InfoButton>:
	icon: "menu"



######-----
<ControllerTopSection>:

	#:set POWER_BUTTON_TEXT "POWER"
	#:set POWER_BUTTON_ICON "power"

	size_hint: (1, 0.35)

	power_button: power_button
	power_state_section: power_state_section
	menu_spinner: menu_spinner

	PowerButton:
		id: power_button
		pos_hint: {"x" : 0, "center_y": 0.5}
	PowerState:
		id: power_state_section
		pos: (power_button.right, 0)
	ScreenMenuSpinner:
		id: menu_spinner
		pos_hint: {"right": 1, "top": 1}



#####-----
<ControllerQuickLinksSection@MDBoxLayout>:
	Button:
		text: "QUICKLINKS_FAVORITES_CUSTOMIZABLE_BUTTONS"



#####-----
<ControllerDPadSection@MDRelativeLayout>:
	Button:
		text: "SVG_DPAD_WIDGET"



#####-----
<FunctionButtons>:
	md_bg_color: (149 / 255, 117 / 255, 205 / 255, 0.8)
	rounded_button: False
	size_hint: (0.25, 0.33333)
	icon_size: "28sp"



#####-----
<VolUpButton>:
	icon: "volume-plus"



#####-----
<VolDownButton>:
	icon: "volume-minus"



#####-----
<BackButton>:
	icon: "arrow-left"



#####-----
<HomeButton>:
	icon: "home"



#####-----
<MuteButton>:
	icon: "volume-off"



#####-----
<ReverseButton>:
	icon: "rewind"



#####-----
<ForwardButton>:
	icon: "fast-forward"



#####-----
<ControllerFunctionButtonsSection>:
	size_hint: (1, 1)
	cols: 4
	rows: 3

	ReverseButton:
		id: reverse_button
		pos_hint: {"x": 0, "top": 1}
	ForwardButton:
		id: forward_button
		pos_hint: {"x": 0.25, "top": 1}
	HomeButton:
		id: home_button
		pos_hint: {"x": 0.5, "top": 1}
	VolUpButton:
		id: vol_up_button
		pos_hint: {"x": 0.75, "top": 1}
	InfoButton:
		id: info_button
		pos_hint: {"x": 0.5, "top": 2 / 3}
	VolDownButton:
		id: vol_down_button
		pos_hint: {"x": 0.75, "top": 2 / 3}
	BackButton:
		id: back_button
		pos_hint: {"x": 0.5, "top": 1 / 3}
	MuteButton:
		id: mute_button
		pos_hint: {"x": 0.75, "top": 1 / 3}



#####-----
<SettingsAboutScreen@MDScreen>: #not implemented yet



#####-----
<MainRemoteScreen>: #MD screen

	main_top_section: main_top_section

	MainScreenGridLayout:

		ControllerTopSection:
			id: main_top_section
		ControllerDPadSection:
		ControllerFunctionButtonsSection:
		ControllerQuickLinksSection:



#####-----
<InitialSetupScreen@MDScreen>:
	Label:
		text: "INITIAL_SETUP_SCREEN"
